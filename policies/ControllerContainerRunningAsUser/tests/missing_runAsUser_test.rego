package weave.advisor.podSecurity.runningAsUser

test_missing_runAsUser {
  testcase = {
    "parameters": {
      "exclude_namespaces": [],
      "uid": 0,
      "exclude_label_key": "",
      "exclude_label_value": "",
    },
    "review": {
      "object": {
        "apiVersion": "v1",
        "kind": "Pod",
        "metadata": {
          "name": "security-context-demo",
        },
        "spec": {
          "securityContext" : {
            "runAsNonRoot": true,
          },
          "containers": [
            {
              "securityContext" : {
                "runAsNonRoot": true,
              },
              "name": "sec-ctx-demo",
              "image": "busybox",
              "command": [
                "sh",
                "-c",
                "sleep 1h"
              ],
            },
            {
              "securityContext" : {
                "runAsNonRoot": true,
              },
              "name": "sec-ctx-demo2",
              "image": "busybox",
              "command": [
                "sh",
                "-c",
                "sleep 1h"
              ],
            }
          ]
        }
      }
    }
  }

  # 1 violation per container
  count(violation) == 2 with input as testcase
}